[Unit]
Description=Blacklist service for banning and unbanning ip addresses of subnets.
Wants=fail2ban.service
After=fail2ban.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/etc/blacklist-scripts/blacklist-ip.sh -c %i -start
ExecStop=/etc/blacklist-scripts/blacklist-ip.sh -c %i -stop
ExecReload=/etc/blacklist-scripts/blacklist-ip.sh -c %i -update

[Install]
WantedBy=multi-user.target
